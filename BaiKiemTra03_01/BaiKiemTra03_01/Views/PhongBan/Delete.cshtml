        </div>
        <div class="form-group">
            <label asp-for="SoLuongnv">Ngày tạo</label>
            <input asp-for="SoLuongnv" type="date" class="form-control" readonly />
            <span asp-validation-for="SoLuongnv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhongBanQL">Ngày tạo</label>
            <input asp-for="PhongBanQL" type="date" class="form-control" readonly />
            <span asp-validation-for="PhongBanQL" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
