    <div class="row">
        @foreach (var item in Model)
        {
           <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name </h5>
                        <h6 class="card-title">@item.price</h6>
                        <p class="card-text">@item.Description</p>
                        <div class="row">
                            <div class="col-4">
                                <a class="btn btn-primary" > yêu thích &#10084;</a>
                            </div>
                            <div class="col-4">
                                     <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"> Chi tiết </a>
                            </div>
                       
                            <div class="col-4">
                                 <a class="btn btn-danger"> giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        }
    </div>
    
</div>

<script>
    function confirmDelete(id, row) {
        if (confirm("Ban co chac chan muon xoa?")) {
            xoa(id, $(row))
        }
    }
    function xoa(idx, row) {
        $.ajax({
            url: `SanPham/Delete`,
            type: 'POST',
            data: { id: idx },
            success: function (data) {
                if (data.success) {
                    // nếu xóa thành công, xóa dòng trong bảng
                    row.closest("tr").remove();
                } else {
                    // nếu có lỗi từ server, hiển thị thông báo lỗi
                    alert(data.message);
                }
            },
            error: function (xhr, status, error) {
                // xử lý lỗi khi ajax gặp sự cố
                alert("xóa thất bại: " + error);
            }
        })
    }
</script>